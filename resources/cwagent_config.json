{
        "agent": {
                "run_as_user": "root"
        },
        "logs": {
                "logs_collected": {
                        "files": {
                                "collect_list": [
                                        {
                                                "file_path": "/var/log/apt/history.log",
                                                "log_group_name": "/aws/cloudtrail/console-events",
                                                "log_stream_name": "apt_logs"
                                        },
                                        {
                                                "file_path": "/var/log/kern.log",
                                                "log_group_name": "/aws/cloudtrail/console-events",
                                                "log_stream_name": "kernal_logs"
                                        },
                                        {
                                                "file_path": "/var/log/auth.log",
                                                "log_group_name": "/aws/cloudtrail/console-events",
                                                "log_stream_name": "user_logs"
                                        }
                                ]
                        }
                }
        }
}